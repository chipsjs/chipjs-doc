  "version": "0.2.0",
  "configurations": [
    {
        "name": "Attach",
        "port": 9229,
        "request": "attach",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "type": "pwa-node"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "test convert",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
            "${workspaceFolder}/test/convert/sync_spec.js"
        ],
        "env": {
            "NODE_ENV": "test"
        },
    },
    {
        "type": "node",
        "request": "launch",
        "name": "test mock",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
            "${workspaceFolder}/test/mock"
        ],
        "env": {
            "NODE_ENV": "test"
        },
    },
    {
        "type": "node",
        "request": "launch",
        "name": "test lib",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
            "${workspaceFolder}/test/lib"
        ],
        "env": {
            "NODE_ENV": "test"
        },
    }
  ]
}